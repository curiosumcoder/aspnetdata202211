@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
}

@*<p>Filter: @ViewBag.Filter</p>*@
<p>Filter: @ViewData["Filter"]</p>

<form method="post">
    <input type="search" name="filter" class="form-control" />
</form>

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        @foreach (var p in Model)
        {
            <tr><td>@p.ProductName</td></tr>
        }
    </table>
}